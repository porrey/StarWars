<common:BindablePage x:ConnectionId='1' x:Class="StarWars.Views.CloudSetupPage"
					 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					 xmlns:local="using:StarWars.Views"
					 xmlns:common="using:StarWars.Common"
					 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
					 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
					 mc:Ignorable="d"
					 RequestedTheme="Dark">

	<Border>
		<Border.Background>
			<ImageBrush Stretch="UniformToFill"
						ImageSource="ms-appx:///Assets/X-Wing.jpg" />
		</Border.Background>
		<Grid Background="#66000000">
			<Grid.RowDefinitions>
				<RowDefinition Height="65" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<!-- Menu Button -->
			<StackPanel Grid.Row="0"
						Orientation="Horizontal">
				<Button x:ConnectionId='10' x:Name="menuButton"
						Margin="2,5,0,5"
						VerticalAlignment="Center"
						HorizontalAlignment="Left"
						Width="46"
						Height="46"
						                        >
					<Button.Content>
						<FontIcon Glyph="&#xE700;" />
					</Button.Content>
				</Button>

				<StackPanel Orientation="Vertical">
					<TextBlock VerticalAlignment="Center"
							   HorizontalAlignment="Left"
							   Text="Star Wars 3D Art"
							   Margin="10,0,0,0"
							   FontSize="24" />
					<TextBlock VerticalAlignment="Center"
							   HorizontalAlignment="Left"
							   Text="Cloud Setup"
							   Margin="10,0,0,0"
							   FontSize="14" />
				</StackPanel>
			</StackPanel>

			<!-- Split View -->
			<SplitView x:ConnectionId='2' Grid.Row="1"
					   x:Name="SplitView"
					   Margin="0,0,0,0"
					                                                >

				<!-- Menu -->
				<SplitView.Pane>
					<StackPanel Orientation="Vertical">
						<!-- Control Panel-->
						<HyperlinkButton x:ConnectionId='3' Style="{ThemeResource PivotTitleContentControlStyle}"
										 Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
										                           >
							<HyperlinkButton.Content>
								<StackPanel Orientation="Horizontal">
									<SymbolIcon Symbol="Keyboard"
												Margin="5,5,5,5" />
									<TextBlock Text="Control Panel"
											   VerticalAlignment="Center"
											   Margin="10,0,10,0" />
								</StackPanel>
							</HyperlinkButton.Content>
						</HyperlinkButton>

						<!-- Separator-->
						<Rectangle Height="1"
								   Margin="10,5,10,5"
								   Fill="{ThemeResource ApplicationForegroundThemeBrush}" />

						<!-- Cloud Setup-->
						<HyperlinkButton x:ConnectionId='4' Style="{ThemeResource PivotTitleContentControlStyle}"
										 Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
										                         >
							<HyperlinkButton.Content>
								<StackPanel Orientation="Horizontal">
									<SymbolIcon Symbol="Edit"
												Margin="5,5,5,5" />
									<TextBlock Text="Cloud Setup"
											   VerticalAlignment="Center"
											   Margin="10,0,10,0" />
								</StackPanel>
							</HyperlinkButton.Content>
						</HyperlinkButton>

						<!-- Settings-->
						<HyperlinkButton x:ConnectionId='5' Style="{ThemeResource PivotTitleContentControlStyle}"
										 Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
										                       >
							<HyperlinkButton.Content>
								<StackPanel Orientation="Horizontal">
									<SymbolIcon Symbol="Setting"
												Margin="5,5,5,5" />
									<TextBlock Text="Settings"
											   VerticalAlignment="Center"
											   Margin="10,0,10,0" />
								</StackPanel>
							</HyperlinkButton.Content>
						</HyperlinkButton>

						<!-- Separator-->
						<Rectangle Height="1"
								   Margin="10,5,10,5"
								   Fill="{ThemeResource ApplicationForegroundThemeBrush}" />

						<!-- Reset Settings-->
						<HyperlinkButton x:ConnectionId='6' Style="{ThemeResource PivotTitleContentControlStyle}"
										 Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
										                            >
							<HyperlinkButton.Content>
								<StackPanel Orientation="Horizontal">
									<SymbolIcon Symbol="ReShare"
												Margin="5,5,5,5" />
									<TextBlock Text="Reset Settings"
											   VerticalAlignment="Center"
											   Margin="10,0,10,0" />
								</StackPanel>
							</HyperlinkButton.Content>
						</HyperlinkButton>
					</StackPanel>
				</SplitView.Pane>

				<!-- Page Content -->
				<SplitView.Content>
					<StackPanel Orientation="Vertical"
								Margin="10,20,10,20">

						<TextBlock Text="Device ID"
								   Margin="0,10,0,10" />
						<PasswordBox x:ConnectionId='7' PasswordRevealMode="{Binding IsChecked, ElementName=ShowApiKeyCheckbox, Converter={StaticResource BooleanToRevealModeConverter}, Mode=OneWay}"
									                                           />

						<TextBlock Text="API Key"
								   Margin="0,30,0,10" />
						<PasswordBox x:ConnectionId='8' PasswordRevealMode="{Binding IsChecked, ElementName=ShowApiKeyCheckbox, Converter={StaticResource BooleanToRevealModeConverter}, Mode=OneWay}"
									                                         />

						<CheckBox x:ConnectionId='9' x:Name="ShowApiKeyCheckbox"
								                                                  
								  Margin="0,20,0,0">
							<CheckBox.Content>
								<TextBlock Text="Show Key" />
							</CheckBox.Content>
						</CheckBox>
					</StackPanel>
				</SplitView.Content>
			</SplitView>
		</Grid>
	</Border>
</common:BindablePage>

